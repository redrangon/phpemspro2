{x2;include:header}<body>{x2;include:nav}<div class="container-fluid">	<div class="row-fluid">		<div class="pep">			<div class="col-xs-2 leftmenu">				{x2;include:menu}			</div>			<div id="datacontent">				<ol class="breadcrumb">					<li><a href="index.php?{x2;$_route['app']}-master">{x2;$apps[$_route['app']]['appname']}</a></li>					<li class="active">插件管理</li>				</ol>				<div class="panel panel-default" id="datacontent-container">					<div class="panel-heading">插件管理</div>					<div class="panel-body">						<table class="table table-bordered table-hover">							<thead>							<tr class="info">								<th width="100">									插件标识								</th>								<th width="160">									插件名称								</th>								<th>									简介								</th>								<th width="100">									状态								</th>								<th width="80">									操作								</th>							</tr>							</thead>							<tbody>							{x2;tree:$plugins,plugin,pid}							<tr>								<td>{x2;v:plugin['name']}</td>								<td>									{x2;v:plugin['title']}								</td>								<td>									{x2;v:plugin['describe']}								</td>								<td>									{x2;if:v:plugin['actived']}									<a class="confirm" msg="确定要禁用吗？" href="index.php?plugin-master-plugins-off&plugin={x2;v:plugin['name']}">启用</a>									{x2;else}									<a class="confirm" msg="确定要启用吗？" href="index.php?plugin-master-plugins-on&plugin={x2;v:plugin['name']}">禁用</a>									{x2;endif}								</td>								<td class="text-center">									{x2;if:v:plugin['manageUrl']}									<a class="pluginmanager" href="jsvascript:;" data-href="{x2;v:plugin['manageUrl']}">管理</a>									{x2;endif}								</td>							</tr>							{x2;endtree}							</tbody>						</table>					</div>				</div>				{x2;include:footer}			</div>		</div>	</div></div><script>	$(function(){		$('.pluginmanager').on('click',function(){			var url = $(this).attr('data-href');			$('#datacontent-container').html('<iframe frameborder="0" style="height:calc(100vh - 192px);overflow-y: auto" src="'+url+'" width="100%"></iframe>');		});	});</script></body></html>